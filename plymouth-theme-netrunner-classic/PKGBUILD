# $Id$
# Maintainer: James Kittsmiller (AJSlye) <james@nulogicsystems.com>

pkgname=plymouth-theme-netrunner-classic
pkgver=$(date +%Y.%m)
pkgrel=1
pkgdesc="Default Sounds for Netrunner Rolling"
arch=('any')
url='https://github.com/netrunner-artwork/plymouth-theme-netrunner-classic'
license=('GPL')
groups=('netrunner-artwork')
depends=('plymouth')
makedepends=('git')
install=plymouth.install
source=('git://github.com/netrunner-artwork/plymouth-theme-netrunner-classic')
md5sums=('SKIP')

prepare() {
  cd $srcdir/$pkgname
  sed -e 's|^ImageDir=.*|ImageDir=/usr/share/plymouth/themes/netrunner-logo|' -i usr/share/plymouth/themes/netrunner-logo/netrunner-logo.plymouth
}

package() {
  cd $srcdir/$pkgname
  cp -aR usr $pkgdir/
}
